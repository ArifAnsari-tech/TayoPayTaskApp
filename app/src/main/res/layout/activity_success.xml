<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dash.SuccessActivity">

    <ImageView
        android:id="@+id/starImg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/sg_success"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/msgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/starImg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup Success!!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:paddingBottom="12dp"
            android:textColor="@color/primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your account has been"
            android:textSize="16sp"
            android:textColor="@color/secondary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="created successfully"
            android:textSize="16sp"
            android:textColor="@color/secondary"/>

    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/msgLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>